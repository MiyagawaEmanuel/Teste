@model TaskQuest.Models.Grupo

<div class="modal fade" id="modalCriarGrupo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="formCriarGrupo" action="/Grupo/CriarGrupo" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h1 class="modal-title" id="exampleModalLabel">Criar Novo Grupo</h1>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" required class="form-control" id="Nome" name="Nome" placeholder="Nome do Grupo">
                        <label for="Nome"></label>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" required id="Descricao" name="Descricao" placeholder="Descrição do Grupo"></textarea>
                        <label for="Descricao"></label>
                    </div>
                    <div class="form-group">
                        <p>Escolha a cor do Grupo</p>
                        <input type="hidden" id="Cor" name="Cor" value="#106494">
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-secondary btn-cg" value="Criar">
                </div>
            </form>
        </div>
    </div>
</div>